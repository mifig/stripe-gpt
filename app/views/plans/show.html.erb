<div class="mt-3 mx-4">
  <h1><%= @plan.stripe_name %> plan</h1>
  <p><%= @plan.stripe_description %></p>
  <p><%= humanized_money_with_symbol(@plan.stripe_price) %> p/ <%= @plan.stripe_recurrance_interval %></p>

  <%= simple_form_for [@plan, @subscription] do |f| %>
    <%= f.submit "Subscribe!", class: "btn btn-primary" %>
  <% end %>
</div>